{
  "compilerOptions": {
    "outDir": "./ts-out/",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "checkJs": true,
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"]
  },
  "include": [
    "./src/*.ts"
  ]
}
